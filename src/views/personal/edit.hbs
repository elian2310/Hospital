<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg">
    <h1 class="text-center text-3xl font-bold">Editar Personal</h1>
    <form action="" method="POST" class="mt-4">
        <input type="number" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" placeholder="C.I." name="ciPersonal">

        <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" placeholder="Nombre" name="nombre">

        <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" placeholder="Apellido Principal" name="apellidoPrincipal">

        <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" placeholder="Apellido Secundario" name="apellidoSecundario">

        <input type="number" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" placeholder="Teléfono" name="telefono">

        <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" placeholder="Fecha de Nacimiento" name="nacimiento" id="nacimiento">

        <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" placeholder="Contraseña" name="password">

        <select name="autoridad" id="autoridad" class="form-control rounded-md bg-gray-200 w-full my-2">
            <option value="">Seleccione un nivel de Autoridad</option>
            <option value="1">1</option>
            <option value="2">2</option>
        </select>

        <select name="cargo" id="cargo" class="form-control rounded-md bg-gray-200 w-full my-2">
            <option value="">Seleccione un Cargo</option>
            <option value="Medico">Medico</option>
            <option value="Administrativo">Administrativo</option>
            <option value="Otro">Otro</option>
        </select>

        <button type="submit" class="rounded-md bg-green-500 w-full text-lg text-white font-semibold p-2 my-3 hover:bg-green-600 focus:bg-green-700">Editar</button>
    </form>
</div> 