<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg"/>
    <h1 class="text-center text-3xl font-bold">Editar Ambiente</h1>
    {{#each ambientes}}
    <form action="" method="POST" class="mt-4">
        <input type="number" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" placeholder="Codigo de ambiente" name="idAmbiente" value="{{idAmbiente}}">
        <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white" placeholder="Nombre" name="nombre" value="{{nombre}}">    
        <select name="disponible" id="disonible" class="form-control rounded-md bg-gray-200 w-full my-2">
            <option value="">Seleccione un Estado</option>
            <option value=1>Disponible</option>
            <option value=0>No Disponible</option>
        </select>  
        <button type="submit" class="rounded-md bg-green-500 w-full text-lg text-white font-semibold p-2 my-3 hover:bg-green-600 focus:bg-green-700">Registrar</button>
    </form>
    {{/each}}
</div> 